<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @trip, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :type, class: "control-label" %>
          <%= f.text_field :type, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :start_time, class: "control-label" %>
          <%= f.text_field :start_time, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :start_location, class: "control-label" %>
          <%= f.text_field :start_location, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :end_time, class: "control-label" %>
          <%= f.text_field :end_time, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :end_location, class: "control-label" %>
          <%= f.text_field :end_location, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :notes, class: "control-label" %>
          <%= f.text_field :notes, class: "form-control" %>
        </div>

      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>