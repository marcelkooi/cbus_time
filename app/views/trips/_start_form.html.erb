<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @trip, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :start_location, class: "control-label" %>

          <% if params[:commute] == "To Work" %>
            <%= f.select :start_location, options_for_select(['High and Price', 'High and Hubbard'], 'High and Price'), class: "form-control" %>
          <% elsif params[:commute] == "To Home" %>
            <%= f.select :start_location, options_for_select(['Front and Main', 'Front and Town'], 'Front and Main'), class: "form-control" %>
          <% end %>
        </div>

          <%= f.hidden_field :commute, value: params[:commute] %>

      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>