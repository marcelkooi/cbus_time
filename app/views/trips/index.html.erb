<div class="container-fluid">
	<h1 class="centered">It's Cbus Time!</h1>

	<div class="row">
		<div class="centered col-md-4 col-md-offset-4">
			<%= link_to "To Work", new_trip_path(commute: "To Work"), remote: true, class: "btn btn-success" %>
			<%= link_to "To Home", new_trip_path(commute: "To Home"), remote: true, class: "btn btn-success" %>
			
			<div class="new-trip"></div> <br>
		</div>
	</div>

	<div class="trip-index well centered">
		<%= render "index" %>
	</div>

	<div id="trip-modal" class="modal fade"></div>

	<div class="well">
		<%= render "dashboard" %>

	</div>


</div>