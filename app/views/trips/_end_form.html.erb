<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @trip, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :end_location, class: "control-label" %>

          <% if Trip.find(params[:id]).commute == "To Home" %>
            <%= f.select :end_location, options_for_select(['Front and Main', 'High and Prescott'], 'Front and Main'), class: "form-control" %>
          <% elsif Trip.find(params[:id]).commute == "To Work" %>
            <%= f.select :end_location, options_for_select(['Front and Main', 'High and Prescott'], 'High and Prescott'), class: "form-control" %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :notes, class: "control-label" %>
          <%= f.text_area :notes, class: "form-control" %>
        </div>

      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>